#define MAXDIALOGVAR 100

int values[MAXDIALOGVAR];

static void DialogsLogic::SetVar(DialogVars var,  int value) {
  values[var]= value;
}


static bool DialogsLogic::GetVar(DialogVars var) {
  if (values[var] != 0) return true;
  return false;
}




